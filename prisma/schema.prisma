generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model contacts {
  id                Int       @id @default(autoincrement())
  uid               String?   @unique @default(dbgenerated("gen_random_uuid()"))
  first_name        String    @db.VarChar(255)
  last_name         String?   @db.VarChar(255)
  phone_number      String?   @db.VarChar(50)
  email             String?   @db.VarChar(255)
  company           String?   @db.VarChar(255)
  job_title         String?   @db.VarChar(255)
  notes             String?
  profile_image_url String?   @db.VarChar(255)
  created_at        DateTime? @default(now()) @db.Timestamptz(6)
  updated_at        DateTime? @default(now()) @db.Timestamptz(6)

  @@index([first_name, last_name], map: "idx_contacts_name")
}

model userdata {
  userid       Int       @id @default(autoincrement())
  username     String    @db.VarChar(50)
  email        String    @db.VarChar(100)
  password     String    @db.VarChar(255)
  createddate  DateTime? @default(now()) @db.Timestamp(6)
  modifieddate DateTime? @default(now()) @db.Timestamp(6)
  status       Boolean
}
